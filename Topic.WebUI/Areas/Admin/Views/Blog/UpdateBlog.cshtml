@model UpdateBlogDto
@{
    ViewData["Title"] = "Bloglar";
    ViewData["SubTitle"] = "Blog Güncelleme";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="BlogId" />
    <label>Blog Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />

    <label>Kategori</label>
    <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-control">
        <option value="value">Kategori Seçiniz</option>

    </select>
    <br />

    <label>Kapak Resmi</label>
    <input type="text" asp-for="CoverImageUrl" class="form-control" />
    <br />

    <label>Resim 1</label>
    <input type="text" asp-for="Image1" class="form-control" />
    <br />

    <label>Resim 2</label>
    <input type="text" asp-for="Image2" class="form-control" />
    <br />

    <label>Kısa Açıklama</label>
    <input type="text" asp-for="ShortDecription" class="form-control" />
    <br />

    <label>Uzun Açıklama</label>
    <textarea asp-for="LongDecription" rows="5" class="form-control"></textarea>
    <br />

    <button class="btn btn-outline-primary">Güncelle</button>
</form>