
@model List<ResultContactDto>
<section class="contact-section section-padding section-bg" id="section_5">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-12 text-center">
                <h2 class="mb-5">Bizimle Temasa Geçin</h2>
            </div>
            @foreach (var item in Model)
            {
                <div class="col-lg-5 col-12 mb-4 mb-lg-0">
                    <iframe class="google-map" src="@item.MapUrl" width="100%" height="250" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>

                <div class="col-lg-6 col-md-12 col-12 mb-3 mb-lg- mb-md-0 ms-auto">
                    <h4 class="mb-3">@item.Title</h4>

                    <p>@item.Address</p>

                    <hr>

                    <p class="d-flex align-items-center mb-1">
                        <span class="me-2">Telefon</span>

                        <a href="tel: 305-240-9671" class="site-footer-link">
                            @item.Phone
                        </a>
                    </p>

                    <p class="d-flex align-items-center">
                        <span class="me-2">Eposta</span>

                        <a href="mailto:@(item.Mail)" class="site-footer-link">
                            @item.Mail
                        </a>
                    </p>
                </div>
            }


        </div>
    </div>
</section>